{
  "description": "Monitor the observability of the [AWS Cognito Identity Provider](https://aws.amazon.com/cognito/).",
  "environment_variables": [
    {
      "description": "Your AWS Access Key Id.",
      "name": "METRIST_AWS_ACCESS_KEY_ID",
      "required": true
    },
    {
      "description": "Your AWS Secret Access Key.",
      "name": "METRIST_AWS_SECRET_ACCESS_KEY",
      "required": true
    },
    {
      "description": "Name of user pool.",
      "name": "METRIST_USER_POOL",
      "required": true
    }
  ],
  "has_cleanup_tasks": false,
  "logical_name": "cognito",
  "name": "AWS Cognito",
  "publisher": "Metrist",
  "repository": "https://docs.metrist.io/monitors/",
  "runtime_type": "dll",
  "steps": [
    {
      "description": "This step attemps to create a user account (randomly named) using Cognito Identity Provider Client.",
      "logical_name": "CreateUser",
      "recommended_timeout_seconds": 900
    },
    {
      "description": "This step attemps to delete the user account created in a previous step.",
      "logical_name": "DeleteUser",
      "recommended_timeout_seconds": 900
    }
],
  "version": "0.1.0-beta"
}
